# =====================================================
# MINIMAL ENV FOR PINECONE SMOKE TEST
# =====================================================
# Copy this to .env and fill in your actual values

# Pinecone API Key (required)
PINECONE_API_KEY=your_pinecone_api_key_here

# For Pinecone v2 (pod-based):
PINECONE_ENV=us-west1-gcp

# For Pinecone v3 (serverless) - use instead of PINECONE_ENV:
# PINECONE_CLOUD=gcp
# PINECONE_REGION=us-west1

# Index settings
PINECONE_INDEX_NAME=bu-processor
PINECONE_NAMESPACE=bu

# Embedding model (optional - has sensible default)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# Vector database toggle
VECTOR_DB_ENABLE=true
