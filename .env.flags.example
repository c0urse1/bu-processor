# =====================================================
# FEATURE FLAGS CONFIGURATION
# =====================================================
# Control which components are enabled/disabled
# Default: All advanced features are OFF for MVP

# =====================================================
# CORE PINECONE FEATURES
# =====================================================
# Full-featured Pinecone integration (vs minimal)
ENABLE_ENHANCED_PINECONE=false

# Async batch upserts for better performance
ENABLE_ASYNC_UPSERT=false

# Stub mode for testing (no actual Pinecone calls)
ENABLE_PINECONE_STUB=false

# =====================================================
# PERFORMANCE & CACHING
# =====================================================
# Cache embeddings to avoid recomputation
ENABLE_EMBED_CACHE=false

# Use ThreadPoolExecutor for parallel processing
ENABLE_THREADPOOL=false

# Rate limiting for API calls
ENABLE_RATE_LIMITER=false

# =====================================================
# MONITORING & OBSERVABILITY
# =====================================================
# Prometheus metrics collection
ENABLE_METRICS=false

# Detailed logging (verbose mode)
ENABLE_DETAILED_LOGGING=false

# Distributed tracing
ENABLE_TRACING=false

# =====================================================
# ML & AI FEATURES
# =====================================================
# Cross-encoder reranking for better results
ENABLE_RERANK=false

# Hybrid search (sparse + dense vectors)
ENABLE_HYBRID_SEARCH=false

# Query expansion and enhancement
ENABLE_QUERY_EXPANSION=false

# =====================================================
# ADVANCED PIPELINE FEATURES
# =====================================================
# Sliding window chunking with overlap
ENABLE_CHUNK_OVERLAP=false

# Rich metadata extraction
ENABLE_METADATA_EXTRACTION=false

# Content deduplication
ENABLE_DEDUPLICATION=false

# =====================================================
# API & INTEGRATION FEATURES
# =====================================================
# Chatbot interface
ENABLE_CHATBOT=false

# Streaming API responses
ENABLE_STREAMING_API=false

# Webhook callbacks for async operations
ENABLE_WEBHOOK_CALLBACKS=false

# =====================================================
# DEVELOPMENT & TESTING
# =====================================================
# Debug mode with extra information
ENABLE_DEBUG_MODE=false

# Mock external API responses
ENABLE_MOCK_RESPONSES=false

# Performance profiling
ENABLE_PROFILING=false

# =====================================================
# EXPERIMENTAL FEATURES
# =====================================================
# New chunking algorithms (experimental)
ENABLE_EXPERIMENTAL_CHUNKING=false

# Vector quantization for storage efficiency
ENABLE_VECTOR_QUANTIZATION=false

# Federated search across multiple indices
ENABLE_FEDERATED_SEARCH=false

# =====================================================
# USAGE EXAMPLES
# =====================================================
# To enable metrics and caching for production:
# ENABLE_METRICS=true
# ENABLE_EMBED_CACHE=true
# ENABLE_THREADPOOL=true

# To enable reranking for better search quality:
# ENABLE_RERANK=true
# ENABLE_HYBRID_SEARCH=true

# To enable full Pinecone features:
# ENABLE_ENHANCED_PINECONE=true
# ENABLE_ASYNC_UPSERT=true
