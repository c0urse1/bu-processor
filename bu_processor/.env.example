# =============================================================================
# PINECONE CONFIGURATION (MVP)
# =============================================================================

# Required: Pinecone API Key
PINECONE_API_KEY=

# Pinecone v2 (legacy)
PINECONE_ENV=us-west1-gcp

# Pinecone v3 serverless (preferred)
PINECONE_CLOUD=gcp
PINECONE_REGION=us-west1

# Index configuration
PINECONE_INDEX_NAME=bu-processor
PINECONE_NAMESPACE=bu

# =============================================================================
# EMBEDDING CONFIGURATION (MVP)
# =============================================================================

# Embedding model - use 768-dimensional model for better quality
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# Alternative smaller model (384-dimensional)
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# FEATURE TOGGLES (MVP)
# =============================================================================

# Enable vector database integration
VECTOR_DB_ENABLE=true

# Disable metrics for MVP
ENABLE_METRICS=false

# =============================================================================
# BU-PROCESSOR CONFIGURATION
# =============================================================================

# Environment
BU_ENVIRONMENT=development
BU_LOG_LEVEL=DEBUG

# Model paths
BU_MODEL_PATH=./artifacts/model-v1
BU_DATA_PATH=./data

# Processing
BU_ENABLE_VECTOR_DB=true
BU_ENABLE_SEMANTIC=true
BU_ENABLE_DEDUPLICATION=true
BU_ENABLE_CHATBOT=false
